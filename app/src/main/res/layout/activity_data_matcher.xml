<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11999999"
    android:orientation="vertical"
    tools:context=".UI.Util.DataMatcherActivity">

    <include layout="@layout/include_layout_view_title_layout" />

    <EditText
        android:id="@+id/edtMatcher"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="60dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="请输入正则表达式"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" />

    <EditText
        android:id="@+id/edtMessage"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="请输入内容"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_activity"
        android:layout_marginTop="30dp"
        android:paddingLeft="@dimen/margin_activity"
        android:textColor="#1a1a1a"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvConfirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="60dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="检验是否正确" />
</LinearLayout>