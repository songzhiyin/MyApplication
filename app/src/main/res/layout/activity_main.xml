<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.szy.myapplication.UI.HomeActivity">


    <com.youth.banner.Banner xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/banner_main"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:indicator_drawable_selected="@drawable/banner_select"
        app:indicator_drawable_unselected="@drawable/banner_no_select"
        app:indicator_height="8dp"
        app:indicator_width="8dp"></com.youth.banner.Banner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="世界那么大，我想到处走走！"
        android:textColor="@color/homeColor"
        android:textSize="15sp" />

    <GridView
        android:id="@+id/grid_main_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:numColumns="3"></GridView>


</LinearLayout>
