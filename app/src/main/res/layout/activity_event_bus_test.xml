<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.szy.myapplication.UI.EventBusTestActivity">

    <TextView
        android:id="@+id/tv_main_bnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="开始EventBus的测试"
        android:textColor="@color/tv_black"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/tv_test1_button2"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@color/homeColor"
        android:gravity="center"
        android:text="文本"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_test1_button3"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@color/homeColor"
        android:gravity="center"
        android:text="布尔值"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_test1_button4"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@color/homeColor"
        android:gravity="center"
        android:text="数字整型"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_test1_button5"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@color/homeColor"
        android:gravity="center"
        android:text="小数"
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>
