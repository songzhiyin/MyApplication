<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_activity"
    android:id="@+id/lineBluetooth"
    android:paddingTop="6dp"
    android:paddingRight="@dimen/margin_activity"
    android:paddingBottom="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBlueName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SMG-50"
            android:textColor="@color/tv_black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvBlueConnect"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:text="连接"
            android:textColor="@color/gray_666"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvBlueAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_weight="0"
        android:gravity="center"
        android:text="45:12:54:66:12:54:12"
        android:textColor="@color/gray_333"
        android:textSize="14sp" />

</LinearLayout>