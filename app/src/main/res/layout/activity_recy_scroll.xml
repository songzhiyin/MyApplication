<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.szy.myapplication.UI.View.MessageListActivity">


    <include layout="@layout/include_layout_view_title_layout"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.lib.szy.pullrefresh.PullreFresh.PullRecyclerView
            android:id="@+id/recylist_message_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.lib.szy.pullrefresh.PullreFresh.PullRecyclerView>

        <TextView
            android:id="@+id/tv_recy_scroll_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/gray_666"
            android:gravity="center"
            android:text="这是第5项"
            android:textColor="@color/white"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>
