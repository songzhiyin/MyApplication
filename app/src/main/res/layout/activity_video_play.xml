<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    tools:context=".UI.Util.VideoPlayActivity">

    <SurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvStartRecoreVideo"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_margin="40dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="开始录制"
        android:textColor="@color/tv_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tvStopRecoreVideo"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="结束录制"
        android:textColor="@color/tv_black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvStartRecoreVideo" />

    <TextView
        android:id="@+id/tvRecordNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center"
        android:text="录制时间"
        android:textColor="#1233ee"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>